{
  "name": "playwright_qa_automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "qa:admin": "ENV=qa npx playwright test --project=Admin",
    "stage:admin": "ENV=stage npx playwright test --project=Admin",

  "test:cucumber": "cucumber-js --require features/step-definitions/*.ts --require features/support/*.ts --require-module ts-node/register",
  "test:cucumber:prod": "ENV=prod node -r dotenv/config -r ts-node/register node_modules/.bin/cucumber-js",
  "test:cucumber:prod:dry-run": "ENV=prod node -r dotenv/config -r ts-node/register node_modules/.bin/cucumber-js --dry-run",
    
    "test:playwright": "playwright test",
    "test:all": "npm run test:playwright && npm run test:cucumber",
    "postinstall": "playwright install"
},
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "chrome-launcher": "^1.1.2",
    "dotenv": "^16.5.0",
    "fs": "^0.0.1-security",
    "playwright": "^1.52.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.0.0",
    "@playwright/test": "^1.54.1",
    "@types/cucumber": "^6.0.1",
    "@types/node": "^22.14.1",
    "cucumber-html-reporter": "^7.2.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}