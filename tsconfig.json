{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@pages": ["./pages/index.ts"],
      "@fixtures/*": ["./tests/fixtures/*.ts"],
      "@utils/*": ["./utils/*.ts"]
    },
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}